  <!-- Updated Form JavaScript (at the bottom, before </body>) -->
  <script>
    // ... (all existing scripts: AOS, hamburger, GA, etc. remain) ...

    // ✨ Enhanced Form Submission with Feedback
    document.getElementById('contactForm').addEventListener('submit', async function (e) {
      e.preventDefault();
      const form = e.target;
      const messageEl = document.getElementById('formMessage');
      messageEl.className = 'form-message'; // Reset classes
      messageEl.style.display = 'block';
      messageEl.textContent = 'Sending your message...';

      try {
        const formData = new FormData(form);
        const response = await fetch(form.action, {
          method: 'POST',
          body: formData,
          headers: { Accept: 'application/json' }
        });

        if (response.ok) {
          messageEl.textContent = 'Thank you! Your message has been sent successfully.';
          messageEl.classList.add('success');
          form.reset();
        } else {
          throw new Error('Submission failed');
        }
      } catch (err) {
        messageEl.textContent = 'Oops! Something went wrong. Please try again.';
        messageEl.classList.add('error');
      }
    });
  </script>
